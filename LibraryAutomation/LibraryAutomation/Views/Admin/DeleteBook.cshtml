@model LibraryAutomation.Models.BookCopy

@{
    ViewData["Title"] = "Kopya Sil";
}

<h2>Kopya Sil</h2>

<p><strong>Fiziksel Lokasyon:</strong> @Model.PhysicalLocation</p>

<form asp-action="DeleteCopyConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <p>Bu kitap kopyasını silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="EditBook" asp-route-id="@Model.BookId" class="btn btn-secondary">İptal</a>
</form>
